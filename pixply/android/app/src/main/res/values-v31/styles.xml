<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Android 12+ splash screen customization -->
    <style name="LaunchTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <!-- Keep the same launch background color as pre-Android 12 -->
        <item name="android:windowBackground">@drawable/launch_background</item>
        <!-- Control the new splash API behavior -->
        <item name="android:windowSplashScreenBackground">@android:color/black</item>
        <item name="android:windowSplashScreenAnimatedIcon">@mipmap/ic_splash</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@android:color/black</item>
    </style>
</resources>
